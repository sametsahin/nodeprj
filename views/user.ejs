<!DOCTYPE html>
<html lang="en">
<%- include('./partials/_head') %>

    <body class="main-layout">
        <%- include('./partials/_header') %>
            <div class="customers">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="titlepage text_align_center">
                                <h2>Welcome <%= user.username %>
                                </h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="satteb text_align_center">
                                <p>fact that a reader will be distracted by the readable content of a page when looking
                                    at its
                                </p>
                                <h3>The point of using </h3>
                                <i><img src="/images/custo.jpg" alt="#" /></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="text_align_center">

                            <% if (!checkFollower) { %>
                                <a style="margin:20px auto;" class="read_more"
                                    href="/users/<%= user._id %>/follow?_method=PUT">FOLLOW</a>
                                <% } else { %>
                                    <a style="margin:20px auto;" class="read_more"
                                        href="/users/<%= user._id %>/unfollow?_method=PUT">UNFOLLOW</a>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="gallery">
                <div class="container_with">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="titlepage text_align_center">
                                <h2>My Photos</h2>
                            </div>
                        </div>
                    </div>
                    <div class="tz-gallery">
                        <div class="row">

                            <% for(photo of photos) { %>
                                <div class="col-lg-4 col-md-6 ma_bottom30">
                                    <div class="lightbox">
                                        <img src="<%= photo.url %>" alt="<%= photo.name %>">
                                        <div class="view_main">
                                            <div class="pose">
                                                <a class="read_more" href="/photos/<%= photo._id%>"><img src=""
                                                        alt="#" /></a>
                                                <h3 style="padding:10px 0 10px 0;">
                                                    <%= photo.name %>
                                                </h3>
                                                <p>
                                                    <%= photo.description.substring(0,80) +"..." %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('./partials/_footer') %>
                <%- include('./partials/_script') %>
    </body>

</html>