<header class="header-area">
   <div class="container-fluid">
      <div class="row ">

         <div class=" col-md-2 col-sm-3">
            <div class="logo">
               <a href="/">lens<br><span>light</span></a>
            </div>
         </div>
         <div class="col-md-6 col-sm-9">
            <div class="navbar-area">
               <nav class="site-navbar">
                  <ul>
                     <li><a class="<%= title === 'home' && 'active' %>" href="/">Home</a></li>
                     <li><a class="<%= title === 'about' && 'active' %>" href="/about">About</a></li>
                     <li><a class="<%= title === 'photos' && 'active' %>" href="/photos">Photos</a></li>
                  </ul>
                  <button class="nav-toggler">
                     <span></span>
                  </button>
               </nav>
            </div>
         </div>
         <div class=" col-md-4 di_none">
            <ul class="email text_align_right">
               <% if(user) { %>
                  <li><a class="<%= title === 'dashboard' && 'active' %>" href="/user/dashboard">Dashboard</a>
                  </li>
                  <li><a href="/user/logout">Logout</a></li>
               <% } else { %>
                     <li><a class="<%= title === 'register' && 'active' %>" href="/register">Register</a></li>
                     <li><a class="<%= title === 'login' && 'active' %>" href="/login">Login</a></li>
               <% } %>
            </ul>
         </div>
      </div>
   </div>
</header>